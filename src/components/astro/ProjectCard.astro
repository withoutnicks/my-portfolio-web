---
import Image from "astro/components/Image.astro";

interface Props {
	bannerUrl: string;
	name: string;
	description: string;
	stackIcons?: JSX.Element[];
}

const { bannerUrl, name, description } = Astro.props;
---

<article class="mb-8 flex gap-6 md:justify-center md:even:flex-row-reverse">
	<picture class="hidden h-56 w-full max-w-80 overflow-hidden rounded-2xl shadow-xl bg-white/70 md:block">
		<Image
			class="relative rounded-lg transition-all duration-500 hover:-translate-y-4"
			width={320}
			height={220}
			src={bannerUrl}
			alt={name + " banner"}
		/>
	</picture>
	<div class="flex flex-col justify-center gap-2">
		<h3 class="text-xl font-extrabold">{name}</h3>
		<p class="max-w-96">{description}</p>
		<section class="my-2 flex gap-2">
			<slot name="stack-tech" />
		</section>
		<section class="flex gap-2">
			<slot name="actions-btn" />
		</section>
	</div>
</article>
