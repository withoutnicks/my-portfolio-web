---
import { Zap } from "lucide-react";
import SubtitleSection from "@/components/astro/SubtitleSection.astro";
import { Badge } from "./ui/badge";
---

<SubtitleSection title="Skills">
	<Zap size={32} />
</SubtitleSection>

<section class="my-4 flex flex-col justify-center gap-2 p-4">
	<div class="sm:mx-auto">
		<small>Lenguajes:</small>
		<Badge variant="secondary">Javascript</Badge>
		<Badge variant="secondary">PHP</Badge>
		<Badge variant="secondary">CSS</Badge>
	</div>
	<div class="sm:mx-auto">
		<small>Framework/Library:</small>
		<Badge variant="secondary">Astro</Badge>
		<Badge variant="secondary">React</Badge>
		<Badge variant="secondary">Laravel</Badge>
	</div>
</section>
