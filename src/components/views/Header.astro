---
import { LinkedInLogoIcon, GitHubLogoIcon } from "@radix-ui/react-icons";
import IconLink from "@astro/IconLink.astro";
import "@fontsource/asimovian";
import "@fontsource-variable/space-grotesk";
---

<header class="z-10 flex h-[8vh] w-full items-center justify-between px-6 py-4">
	<h2 class="text-2xl font-asimovian font-extrabold">gerardo</h2>
	<nav class="text-lg flex gap-4 font-space font-medium tracking-tighter">
		<a href="/blog" class="hover:underline transition-all duration-300">blog</a>
		<a href="/contact" class="hover:underline transition-all duration-300">contact</a>
	</nav>
	<aside class="flex items-center gap-2">
		<IconLink href="https://www.linkedin.com/in/grardocaycho/" description="Link to Linkedin">
			<LinkedInLogoIcon />
		</IconLink>
		<IconLink href="https://github.com/withoutnicks" description="Link to GitHub">
			<GitHubLogoIcon />
		</IconLink>
	</aside>
</header>
